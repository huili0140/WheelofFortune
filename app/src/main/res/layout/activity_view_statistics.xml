<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.seclass.sdpguessit.ViewStatistics">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Statistics"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonMyPuzzle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="handleClickMyPuzzle"
                android:text="My Puzzles" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonMyTournament"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="handleClickMyTournament"
                android:text="My Tournaments" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonPuzzle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="handleClickPuzzle"
                android:text="All Puzzles" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonTournament"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="handleClickTournament"
                android:text="All Tournaments" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
