<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.seclass.sdpguessit.MainMenu">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:layout_weight="1"
                android:text="Welcome to Guess It!"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCreatePuzzle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:onClick="handleClickCreatePuzzle"
                android:text="Create Puzzle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSolvePuzzle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:onClick="handleClickSolvePuzzle"
                android:text="Solve Puzzle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCreateTournament"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:onClick="handleClickCreateTournament"
                android:text="Create Tournament" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonJoinTournament"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:onClick="handleClickJoinTournament"
                android:text="Join Tournament" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonViewStat"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:onClick="handleClickViewStatistics"
                android:text="View Statistics" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
